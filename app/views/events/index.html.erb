<ul class="navigation">
    <li class="" data-slide="1">Welcome</li>
    <li class="" data-slide="2">Location</li>
    <li class="" data-slide="3">Choose Your Friends</li>
    <li class="" data-slide="4">Send Invitations</li>
</ul>
<div class="slide" id="slide1" data-slide="1" data-stellar-background-ratio="0.5">

<p id="header">Hey, <%= @user.full_name %>.</p>
<p id="p1">You're probably getting hangry. Let's find a place to eat.</p>
  <a class="button" data-slide="2" title=""></a>
</div><!--End Slide 1-->


<div class="slide" id="slide2" data-slide="2" data-stellar-background-ratio="0.5">
<br>
<img src="../assets/location.png" height="250" width="250" id="globe">
<div id = "error"><%= flash[:invitation_error] %></div>
<div id = "error"><%= flash[:event_error] %></div>
<%= form_for :event, url: events_path do |f| %>
  <div class = "field">
    <p><%= f.label "What is your current location?" %></p>
    <p id="p2"><%= f.text_field :street_address %></p>
  </div>
  <a class="button" data-slide="3" title=""></a>
</div><!--End Slide 2-->



<div class="slide" id="slide3" data-slide="3" data-stellar-background-ratio="0.5">
  <br>
  <p id="guest_list_header">Choose Your Friends</p>

  <button type="button" class="addInvitation">Add Guest</button></br>
  <div class="invitationSet">
    <%= render partial: "invitation_form" %>
  </div>
<a class="button" data-slide="4" title=""></a>
</div><!--End Slide 3-->



<div class="slide" id="slide4" data-slide="4" data-stellar-background-ratio="0.5">
    <p><%= f.submit "Send Invitations" %></p>
<% end %>
</div><!--End Slide 4-->

