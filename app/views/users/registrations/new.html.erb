<%= render partial: "shared/navbar" %>
<br>
<div class="page container">
  <p id="register">Register</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
 <div class="registration">
      <div class="field">
        <%= f.label :full_name %><br />
        <%= f.text_field :full_name, :class => "style_field"%>
      </div>

      <div class="field">
        <%= f.label :phone_number %><br />
        <%= f.text_field :phone_number, :class => "style_field"%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => "style_field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "style_field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :id => 'regbutton' %>
      </div>
    <% end %>
  </div>
</div>


